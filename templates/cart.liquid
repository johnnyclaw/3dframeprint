<div class="page-content">
  <h1>Your Cart</h1>

  {%- if cart.item_count > 0 -%}
    <form action="/cart" method="post">
      {%- for item in cart.items -%}
        <div style="display: grid; grid-template-columns: 80px 1fr auto; gap: 1rem; align-items: center; padding: 1.5rem 0; border-bottom: var(--border);">
          <div style="border: var(--border); background: var(--color-gray);">
            {%- if item.image -%}
              <img src="{{ item.image | image_url: width: 160 }}" alt="{{ item.title | escape }}" width="80" height="80" style="object-fit: cover;">
            {%- endif -%}
          </div>
          <div>
            <a href="{{ item.url }}" style="font-weight: 700; text-transform: uppercase; font-size: 0.875rem;">{{ item.title }}</a>
            <div style="margin-top: 0.25rem;">{{ item.price | money }}</div>
          </div>
          <div style="text-align: right;">
            <input type="number" name="updates[]" value="{{ item.quantity }}" min="0" style="width: 60px; padding: 0.5rem; border: var(--border); text-align: center; font-family: var(--font-body);">
          </div>
        </div>
      {%- endfor -%}

      <div style="padding: 2rem 0; text-align: right;">
        <div style="font-size: 1.25rem; font-weight: 800; margin-bottom: 1rem;">Total: {{ cart.total_price | money }}</div>
        <button type="submit" name="update" class="btn btn-secondary" style="margin-right: 0.5rem;">Update</button>
        <button type="submit" name="checkout" class="btn btn-primary">Checkout</button>
      </div>
    </form>
  {%- else -%}
    <p style="margin: 2rem 0;">Your cart is empty.</p>
    <a href="/collections/all" class="btn btn-primary">Continue Shopping</a>
  {%- endif -%}
</div>
